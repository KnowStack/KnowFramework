<?xml version="1.0" encoding="UTF-8"?>
<Configuration package="org.apache.logging.log4j.core,com.didiglobal.logi.log.log4j2.appender" >
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">

        </Console>
        <ElasticsearchAppender name="esAppender" address="localhost" port="9200" user="admin" password="admin" indexName="index_observability" typeName="type" threshold="all" bufferSize="1000">

        </ElasticsearchAppender>
    </Appenders>
    <Loggers>
        <root level="INFO">
            <appender-ref ref="Console" />
            <appender-ref ref="esAppender" />
        </root>
    </Loggers>
</Configuration>
